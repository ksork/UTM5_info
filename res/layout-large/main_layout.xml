<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/backv">

    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Настройки"
            android:id="@+id/btnSettings"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/button"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onClickBtnSettings"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/inettel"
            android:layout_marginLeft="10dp"
            android:onClick="gotoSite"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Логин"
                    android:id="@+id/textView3"
                    style="@style/text1L"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:id="@+id/tvLogin"
                    style="@style/text1L"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Лицевой счет"
                    android:id="@+id/textView"
                    style="@style/text1L"
                    android:layout_column="0"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:id="@+id/tvAccountId"
                    android:layout_column="1"
                    style="@style/text1L"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:id="@+id/tableRow">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Текущий тариф"
                    android:id="@+id/textView6"
                    style="@style/text1L"
                    android:layout_below="@+id/tvLogin"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:id="@+id/tvCurrentTariff"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    style="@style/text1L"
                    android:layout_weight="1"
                    android:layout_column="1"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Баланс"
                android:id="@+id/textView4"
                style="@style/text3L" android:layout_above="@+id/tvBalance" android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:layout_columnSpan="2"
                android:layout_column="0"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvBalance"
                    style="@style/text4L"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_weight="0.5"
                    android:gravity="right"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="р."
                    android:id="@+id/textView2"
                    style="@style/text3L"
                    android:layout_alignBaseline="@+id/tvBalance" android:layout_alignBottom="@+id/tvBalance"
                    android:layout_toRightOf="@+id/tvBalance"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvDaysLeft"
                    style="@style/text5L"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_below="@+id/tvBalance" android:layout_toLeftOf="@+id/tvDayEnding"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="дня"
                    android:id="@+id/tvDayEnding"
                    style="@style/text3L"
                    android:layout_alignBottom="@+id/tvDaysLeft" android:layout_alignParentRight="true"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:gravity="right"
                    android:layout_marginRight="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSettings"
            android:layout_alignParentLeft="false"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp">

        <Button
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:text="Взять\nкредит"
                android:id="@+id/btnAddCredit"
                android:layout_above="@+id/btnSettings"
                android:layout_alignParentLeft="true"
                style="@style/button"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="onClickBtnAddCredit"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:text="Сменить\nтариф"
                android:id="@+id/btnChangeTariff"
                style="@style/button"
                android:paddingTop="10dp"
                android:layout_above="@+id/btnSettings"
                android:layout_centerHorizontal="true"
                android:onClick="onClickBtnChangeTariff"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:text="Блокировка\nсчета"
                android:id="@+id/btnAddBlock"
                android:layout_above="@+id/btnSettings"
                android:layout_alignParentRight="true"
                style="@style/button"
                android:layout_marginRight="10dp"
                android:layout_weight="1" android:onClick="onClickBtnAddBlock"/>

    </LinearLayout>

</RelativeLayout>